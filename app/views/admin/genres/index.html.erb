<%=render 'header/manager_head'%>
<div class="container">
  <div class="row">
     <div class="col-xs-12 genres">
	  <h1>ジャンル一覧</h1>
	  <%=link_to new_admin_genre_path do%><div class="to_add_button">ジャンルを追加する</div><% end %>
	  <table class="table table-striped">
		<thead>
			<tr>
				<th></th>
				<th>ジャンル名</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.id %></td>
				<td><%= genre.name %></td>
				<td><%= link_to "編集", edit_admin_genre_path(genre.id),class: "btn btn-success"%></td>
				<td><%= link_to  admin_genre_path(genre.id), method: :delete do %>
				<td><%=link_to "削除",admin_genre_path(genre.id),class: "btn btn-danger",method: :delete,"data-confirm"=>"本当に削除しますか？"%></td>
					<% end %>
				</td>
			</tr>
			<% end %>
			<%= paginate @genres, class: "paginate" %>
		</tbody>
	  </table>
	 </div>
    </div>
   </div>
</div>
<%=render 'footer/footer'%>