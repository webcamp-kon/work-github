<%=render 'header/manager_head'%>
<div class="container">
  <div class="row">
     <div class="col-xs-12 artists">
	  <h1>アーティスト一覧</h1>
	  <%=link_to new_admin_artist_path do%><div class="to_add_button">アーティストを追加する</div><% end %>
	  <table class="table table-striped">
		<thead>
			<tr>
				<th></th>
				<th>アーティスト名</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @artists.each do |artist| %>
			<tr>
				<td><%= artist.id %></td>
				<td><%= artist.name %></td>
				<td><%= link_to "編集", edit_admin_artist_path(artist.id),class: "btn btn-success" %></td>
				<td><%= link_to  admin_artist_path(artist.id), method: :delete do %>
				<td><%=link_to "削除",admin_artist_path(artist.id),class:"btn btn-danger",method: :delete,"data-confirm"=>"本当に削除しますか？"%></td>
					<% end %>
				</td>
			</tr>
			<% end %>
			<%= paginate @artists, class: "paginate" %>
		</tbody>
	  </table>
	  </div>
    </div>
   </div>
</div>
<%=render 'footer/footer'%>