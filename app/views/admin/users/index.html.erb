
<%=render 'header/manager_head'%>
<div class="container">
  <div class="row">
     <div class="col-xs-12">
      <h1>ユーザー一覧</h1>
     	<table class ="admin-user-table">
      <thead class = "admin-user">
       <tr>
         <th>ID</th>
          <th class = "td">メールアドレス</th>
          <th></th>
        </tr>
      </thead>
     <tbody class = "admin-user">
     <% @users.each do |user| %>
      <% if user.is_deleted == false %>
      <tr>
       <td><%= user.id %></td>
       <td class = "td"><%=user.email%></td>
       <td class="rr"><%=link_to "編集", edit_admin_user_path(user.id),class: "btn btn-success"%>
       </td>
       <td class="rr"><%=link_to "詳細", admin_user_path(user.id),class: "btn btn-info" %>
       </td>
       <td class="rr">
        <%= link_to "退会", admin_user_path(user.id),class: "btn btn-danger", method: :delete,"data-confirm"=>"本当に削除しますか？"%>
              </td>
       </td>
     </tr>
      <% end %>
     <% end %>
        <%= paginate @users, class: "paginate" %>
      </tbody>
      </table>
　　　</div>
  </div>
</div>
<%=render 'footer/footer'%>