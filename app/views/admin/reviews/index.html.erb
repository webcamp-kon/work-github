<%= render 'header/manager_head'%>
<div class="container">
  <div class="row">
     <div class="col-xs-12">
      <h1>レビュー一覧</h1>
       <div class="show_review_group">
       	 <% @reviews.each do |review| %>
            <table class="show_review_contents">
              <tr>
              	<td>ユーザー名</td>
              	<td>
            	<%= review.user.last_name %><%= review.user.first_name %></td>
             </tr>
             <tr>
             	<td>アルバム名</td>
             	<td><%= review.product.name %></td>
             </tr>
             <tr>
             	<td><%= review.created_at.strftime("%Y-%m-%d %H:%M") %></td>
             </tr>
             <tr>
             	<td><%= link_to "編集", edit_admin_review_path(review.id),class: "btn btn-success" %></td>
             	<td><%= link_to "削除", admin_review_path(review.id),class:"btn btn-danger", method: :delete,"data-confirm"=>"本当に削除しますか？"%></td>
             </tr>
             <tr>
             	<td><%= review.title %></td>
                <td><%= review.main_sentence %></td>
             </tr>
          <% end %>
             </table>
       </div>
      </div>
    </div>
</div>
<%=render 'footer/footer'%>